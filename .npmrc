# NPM Configuration for Thanh Social Network

# Generate package-lock.json by default
package-lock=true

# Use exact versions for better consistency
save-exact=false

# Security settings
audit-level=moderate

# Performance settings
prefer-offline=true
progress=true

# Registry settings (default to npm)
registry=https://registry.npmjs.org/

# Cache settings
cache-min=86400

# Install settings
install-strategy=hoisted