{
  "name": "thanh-social-network",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://hgthanh.github.io",
  "description": "Mạng xã hội được xây dựng với React và Supabase",
  "author": "Hoang Thanh <thazhteam@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hgthanh/hgthanh.github.io.git"
  },
  "keywords": [
    "react",
    "social-network",
    "supabase",
    "tailwindcss",
    "github-pages"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "lucide-react": "^0.263.1",
    "date-fns": "^2.29.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "serve": "serve -s build -l 3000",
    "clean": "rm -rf build node_modules package-lock.json && npm install",
    "verify": "node scripts/verify-setup.js",
    "setup": "bash scripts/setup.sh",
    "docker:build": "docker build -t thanh-social .",
    "docker:run": "docker run -p 3000:80 thanh-social",
    "docker:dev": "docker-compose up dev",
    "docker:prod": "docker-compose up app"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^5.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}